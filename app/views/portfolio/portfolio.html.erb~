<script>

	$(document).ready(function() {
        $(window).scroll(function() {
             if ($(this).scrollTop() > 100)
			 {
				$('.nut1').fadeIn();	 
			 }
			 else
			 {
				$('.nut1').fadeOut();	 
			 }
        });
		$('.nut1').click(function() {
			$('html, body').animate({nut:0},800);
			
    });
	
		});
$(document).ready(function()
	{
		initbanner();
		$('#box').slideDown(1500,function()
		 {
			 setTimeout("$('#box').slideUp(1500)",1500) 
		 });
		
	});
	
	function initbanner()
	{
		if($(".slideshow div").length > 1) 
		{
			var transationTime = 2000;
			$(".slideshow div:first").addClass('active');  
			setInterval(slideChangeImage, transationTime); 
		}
	}
	
	
	function slideChangeImage()
	{
		var active = $(".slideshow div.active"); //Get the current active element.
		if(active.length == 0)
		{
			active = $(".slideshow div:last"); //If do not see the active element is the last image.
		}
		
		var next = active.next().length ? active.next() : $(".slideshow  div:first");
		active.addClass('lastactive');
		next.css({opacity:0.0})
				.addClass('active')
				.animate({opacity:1.0}, 1500, function()
				{
					active.removeClass("active lastactive"); 	
				});
	}

</script>

